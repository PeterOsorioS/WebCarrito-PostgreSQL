@if (User.Identity.IsAuthenticated)
{
    <div class="mt-auto">
        <button class="add-to-cart-btn btn btn-danger text-uppercase w-100 rounded-pill"
                style="font-weight:500;font-size: 0.9rem;"
                data-product-id="@Model.IdProducto"
        @(Model.Stock > 0 ? "" : "disabled")
                data-product-id="@Model.IdProducto">
            @if (Model.Stock > 0)
            {
                <text>
                    <i class="fa-solid fa-cart-shopping"></i> Agregar al Carrito
                </text>
            }
            else
            {
                <text>Agotado</text>
            }
        </button>
    </div>
}
else
{
    <button class="btn btn-secondary text-uppercase w-100 rounded-pill"
            style="font-weight:500;font-size: 0.9rem;"
    @(Model.Stock > 0 ? "" : "disabled")
            data-product-id="@Model.IdProducto">
        @if (Model.Stock > 0)
        {
            <text>
                ver detalle
            </text>
        }
        else
        {
            <text>Agotado</text>
        }
    </button>
}