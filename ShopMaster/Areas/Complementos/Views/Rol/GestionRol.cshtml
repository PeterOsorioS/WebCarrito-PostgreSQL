@model IEnumerable<Rol>;
@{
    ViewData["Title"] = "Gestion Rol";
}
<div class="card mb-5 justify-content-center text-dark rounded shadow-lg">
    <div class="card-header py-0 d-flex justify-content-between align-items-center">
        <h4 class="m-0 weight-600">
            <i class="fa-solid fa-scroll"></i> Lista de Roles
        </h4>
    </div>
    <div class="card-body justify-content-center">
        <div class="table-responsive">
            <table id="tbl" class="display table-striped lg-0 p-1 table-bordered py-3 w-100 table rounded">
                <thead>
                    <tr class="p-3 mb-5 rounded shadow-sm">
                        <th class="text-left">ID</th>
                        <th class="text-left">Nombre</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item != null)
                        {
                            <tr id="user_@item.IdRol" class="p-3 mb-5 rounded shadow-sm">
                                <td class="user-nombres text-left">@item.IdRol</td>
                                <td class="user-apellidos text-left">@item.Descripcion</td>                            
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id="ContenedorModalEditProducto"></div>
<div id="ContenedorModalCreateSlider"></div>
@section Scripts {
    <script src="/js/slider.js"></script>
}